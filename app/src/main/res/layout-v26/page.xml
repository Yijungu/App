<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    android:layout_marginLeft="30dp"
    android:layout_marginTop="40dp"
    android:layout_marginRight="30dp"
    android:layout_marginBottom="40dp"
    android:clickable="true">

    <TextView
        android:id="@+id/ticket_category"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginLeft="15dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/ticket_name"
        android:text="헬스"
        android:gravity="bottom"
        android:textColor="@color/black"

        app:layout_constraintHorizontal_bias="0.2"
        android:autoSizeTextType="uniform"
        android:autoSizeMinTextSize="5sp"
        android:autoSizeMaxTextSize="10sp"
        android:autoSizeStepGranularity="1sp"
        app:layout_constraintVertical_weight="1"
        />

    <TextView
        android:id="@+id/ticket_name"
        android:layout_width="0sp"
        android:layout_height="0sp"
        android:layout_marginLeft="12dp"
        app:layout_constraintTop_toBottomOf="@+id/ticket_category"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/ticket_info"
        android:text="신탄진짐"

        android:textSize="20sp"
        android:textColor="@color/black"
        app:layout_constraintVertical_weight="1"
        />

    <TextView
        android:id="@+id/ticket_info"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/ticket_name"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/ticket_info2"
        android:text="주 3회"
        android:textSize="12sp"
        android:gravity="center"
        android:textColor="@color/black"
        app:layout_constraintVertical_weight="0.7"
        />

    <TextView
        android:id="@+id/ticket_info2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/ticket_info"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/ticket_check"
        android:text="2022. 8. 1 ~ 2022. 10. 2"
        android:textSize="8sp"
        android:gravity="center"
        android:textColor="@color/black"
        app:layout_constraintVertical_weight="0.5"
        />

    <TextView
        android:id="@+id/ticket_check"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/ticket_info2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/ticket_price"
        android:text="누적 출석율 : 10/20 (50%)"
        android:gravity="center"
        android:textSize="8sp"
        android:textColor="@color/black"
        app:layout_constraintVertical_weight="1"
        />

    <TextView
        android:id="@+id/ticket_price"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintTop_toBottomOf="@+id/ticket_check"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="10000원"
        android:textColor="@color/black"
        android:textSize="10sp"
        android:gravity="center"
        app:layout_constraintVertical_weight="1"
        />

    <TextView
        android:textColor="@color/black"
        android:id="@+id/ticket_page"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />


</androidx.constraintlayout.widget.ConstraintLayout>